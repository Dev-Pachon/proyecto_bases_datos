<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.banco.controller.RegistroController">
    <bottom>
        <HBox alignment="CENTER" spacing="24.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#onClickRegistrarse" text="Registrarse">
                    <font>
                        <Font name="Comfortaa Medium" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onClickCancelar" text="Cancelar">
                    <font>
                        <Font name="Comfortaa Medium" size="15.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="36.0" left="36.0" right="36.0" top="36.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
